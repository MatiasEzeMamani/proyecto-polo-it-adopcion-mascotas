package com.adopciones.adopcionmascotas.modelos;

import java.math.BigDecimal;
import java.util.Date;

import org.springframework.format.annotation.DateTimeFormat;

import jakarta.persistence.Column;
import jakarta.persistence.Entity;
import jakarta.persistence.EnumType;
import jakarta.persistence.Enumerated;
import jakarta.persistence.GeneratedValue;
import jakarta.persistence.GenerationType;
import jakarta.persistence.Id;
import jakarta.persistence.Table;
import jakarta.validation.constraints.NotEmpty;
import jakarta.validation.constraints.Size;
import lombok.Data;

@Data
@Entity
@Table(name = "mascotas")
public class Mascota {
	
	@Id
	@GeneratedValue(strategy = GenerationType.IDENTITY)
	private Long mascotaId;
	
	@NotEmpty(message = "Coloque su nombre")
	@Size(min = 3, message = "El nombre debe contener mas de 3 caracteres.")
	private String nombre;
	
	@Min(18)
	@Max(99)
	private int edad;
	
	private String imagen;
	
	@Enumerated(EnumType.STRING)
	private EspecieMascota especieMascota;
	
	@Column(precision = 4, scale = 2)
	private BigDecimal peso;
	
	@Column(length = 50)
	private String pelaje;
	
	@Enumerated(EnumType.STRING)
	private Estado estado;
	
	@Enumerated(EnumType.STRING)
	private SexoMascota sexoMascota;
	
	@Column(updatable = false)
	@DateTimeFormat(pattern = "yyyy-MM-dd")
	private Date createdAt;

	@DateTimeFormat(pattern = "yyyy-MM-dd")
	private Date updatedAt;
}
